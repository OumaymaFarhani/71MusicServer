
<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<h1>List of Rooms</h1>
<form method="GET" action="/room/search">
<label for="site-search">Login:</label>
<input type="search" id="search" name="search"
       aria-label="Search by name">

        <button type="submit">search </button>
</form>
<hr>
<table border="1">
<tr>
<td> Name </td>
<td> Description </td>
<td> Type </td>
<td> Status </td>
<td> Start Date </td>
<td> End Date </td>
<td>Action</td>
<td>Update</td>
</tr>
{% for item in data %}

<tr>
<td>{{item.Name}}</td>
<td>{{item.Description}}</td>
<td>{{item.Type}}</td>
<td>{{item.Status}}</td>
<td>{{item.StartDate}}</td>
<td>{{item.EndDate}}</td>

<td>
<a href="/room/delete/{{item._id}}">Delete</a>
</td>
<td>
<a href="/room/update/{{item._id}}">Update</a>
</td>
</tr>

{% endfor %}


</table>

</body>

</html>