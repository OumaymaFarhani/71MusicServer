<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<form method="post" action="/room/updateAction/{{data._id}}">
  <div class="mb-3">
    <label for="Name" class="form-label">Name</label>
    <input type="text" name="Name" id="Name" value="{{data.Name}}" >
 
  </div>
  <div class="mb-3">
    <label for="Description" class="form-label">Description</label>
    <input type="text" name="Description" id="Description" value="{{data.Description}}" >
 
  </div>
  <div class="mb-3">
    <label for="Type" class="form-label">Type</label>
    <input type="text" name="Type" id="Type" value="{{data.Type}}" >
 
  </div>
  <div class="mb-3">
    <label for="Status" class="form-label">Status</label>
    <input type="text" name="Status" id="Status" value="{{data.Status}}">
 
  </div>
  <div class="mb-3">
    <label for="StartDate" class="form-label">StartDate</label>
    <input type="Date" name="StartDate" id="StartDate" value="{{data.StartDate}}">
 
  </div>
   <div class="mb-3">
    <label for="EndDate" class="form-label">EndDate</label>
    <input type="Date" name="EndDate" id="EndDate" value="{{data.EndDate}}" >
 
  </div>
  
 
  <button type="submit" class="btn btn-primary">Update</button>
</form>
</body>
</html>